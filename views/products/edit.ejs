<% layout('layouts/boilerplate') %>

    <div class="container">
        <div class="row">
            <h1 class="text-center">Edit <%= item.name %>
            </h1>
            <div class="col-6 offset-3">
                <form action="/products/<%= item._id %>?_method=PUT" autocomplete="off" method="post" class="needs-validation" novalidate
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="name">Item</label>
                        <input class="form-control" type="text" id="name" name="item[name] " value="<%= item.name %>"
                            required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="name">Price</label>
                        <input class="form-control" type="text" id="name" name="item[price]" value="<%= item.price %>"
                            required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="file">Image</label>
                        <input class="form-control" type="file" id="file" name="image">
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="name">Details</label>
                        <textarea class="form-control" type="text" id="name"
                            name="item[details]"><%= item.details %></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="name">Size</label>
                        <input class="form-control" type="text" id="name" name="item[size]" value="<%= item.size %>"
                            required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="name">Time</label>
                        <input class="form-control" type="text" id="name" name="item[time]" value="<%= item.time %>"
                            required>
                    </div>

                    <button class="btn btn-primary">save change</button>
                    <a class="btn btn-secondary shadow-none " href="/products/<%= item._id %>">Back to item</a>

                </form>
                <form action="/products/<%= item._id %>/edit?_method=DELETE" method="post">
                    <button class="btn btn-danger mt-3">Delete</button>
                </form>

            </div>
        </div>
    </div>