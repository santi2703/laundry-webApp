<% layout('layouts/boilerplate') %>

    <div class="container">
        <div class="row">
            <h1 class="text-center">New Product</h1>
            <div class="col-6 offset-3">
                <form autocomplete="off" action="/products" method="post"  class="needs-validation" novalidate >
                    <div class="mb-3">
                        <label class="form-label" for="name">Item</label>
                        <input class="form-control" type="text" id="name" name="item[name]" required>
                    </div>


                    <div class="mb-3">
                        <label class="form-label" for="name">Price</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text">$</span>
                            <input class="form-control" type="text" id="name" name="item[price]" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="name">Details</label>
                        <textarea class="form-control" type="text" id="name" name="item[details]"> </textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="name">Size</label>
                        <input class="form-control" type="text" id="name" name="item[size]" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="name">Time</label>
                        <input class="form-control" type="text" id="name" name="item[time]" required>
                    </div>
                    <button class="btn btn-primary">Add item</button>
                    <a href="/products" class="btn btn-secondary shadow-none ">All Products</a>
                </form>
            </div>
        </div>
    </div>